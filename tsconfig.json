{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "types": [
      "react-native",
      "jest",
      "node"
    ],
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types/*": [
        "./@types/*"
      ]
    }
  }
}